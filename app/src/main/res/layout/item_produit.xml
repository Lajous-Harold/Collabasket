<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/checkbox_produit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nom_produit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/checkbox_produit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_supprimer"
        android:paddingStart="8dp"/>

    <TextView
        android:id="@+id/categorie_produit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CatÃ©gorie"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/nom_produit"
        app:layout_constraintTop_toBottomOf="@id/nom_produit"
        app:layout_constraintEnd_toEndOf="@id/nom_produit" />

    <ImageButton
        android:id="@+id/btn_supprimer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Supprimer"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
