<?xml version="1.0" encoding="utf-8"?>
<!--
Classe associée : ProduitGroupesAdapter
Utilité : Affiche un produit dans une liste partagée, avec le nom de l’utilisateur qui l’a ajouté.
-->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- CheckBox à gauche -->
        <CheckBox
            android:id="@+id/checkbox_produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp" />

        <!-- Bloc de texte (nom, détails, ajouté par) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/text_nom_produit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom produit"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/text_details_produit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantité + Catégorie"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_ajoute_par"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajouté par : ..."
                android:textSize="13sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Bouton poubelle à droite, centré verticalement -->
        <ImageButton
            android:id="@+id/btn_supprimer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Supprimer"
            android:visibility="gone"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
